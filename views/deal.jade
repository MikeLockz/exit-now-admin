extends layout

block content
  .page-header
    h3 New Deal

  form.form-horizontal(action='/deal/new', method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-sm-2.control-label(for='name') Name
      .col-sm-4
        input.form-control(type='text', name='name', id='name', value='#{}')
    .form-group
      label.col-sm-2.control-label(for='description') Description
      .col-sm-4
        textarea.form-control(name='description', id='description', value='#{}')
    .form-group
      .col-sm-offset-2.col-sm-4
        button.btn.btn.btn-primary(type='submit')
          i.fa.fa-pencil
          | Create Deal